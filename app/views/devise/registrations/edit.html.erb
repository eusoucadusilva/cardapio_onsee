<h2>Painel de Controle</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, :required => true, :autofocus => true %>
    <%= f.input :email, :autofocus => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, :autocomplete => "off", :required => false %>
    <%= f.input :password_confirmation, :required => false %>
    <%= f.input :current_password, :required => true %>
  </div>

  <p class="form-actions">
    <%= f.button :submit, "Atualizar Meus Dados", class: 'btn btn-primary' %>
    <%= link_to "Cadastrar Receita", new_recipe_path, class: 'btn btn-default' %>
    <%= link_to "Minhas Receitas", my_recipes_path, class: 'btn btn-default' %>
    <%= link_to "Voltar", :back, class: 'btn btn-default' %>
  </p>
<% end %>
