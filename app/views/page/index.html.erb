<div id="three-column" class="container">
  <% Recipe.three_last.each_with_index do |recipe, index|%>
    <% calculed_index = index % 3 + 1 %>

    <div class="tbox<%= calculed_index %>">
      <div class="box-style box-style0<%= calculed_index %>">
        <div class="content">
          <div class="image">
            <%= image_tag recipe.avatar.url(:medium) %>
          </div>
          <h2><%= recipe.title %></h2>
          <%= link_to "Sabia mais ...", recipe, class: 'btn btn-default btn-lg' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
